<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<ScrollPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fitToWidth="true"
            style="-fx-background:white; -fx-background-insets: 0; -fx-padding: 0;">

    <AnchorPane style="-fx-background-color: white;">
        <!-- Top VBox: hero + purple bar -->
        <VBox alignment="TOP_CENTER"
              AnchorPane.topAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              style="-fx-padding: 0 0 0 0;">
            <StackPane fx:id="heroPane"
                       prefHeight="260"
                       style="-fx-background-color: linear-gradient(to bottom, #f09e60 0%, #f3b754 40%, #eda53a 100%);">
                <Label text="Track and Ship Packages With Ease"
                       styleClass="main-Title" />
            </StackPane>

            <!-- Thin purple separator, directly under hero -->
            <Pane prefHeight="6"
                  maxWidth="Infinity"
                  style="-fx-background-color: #493CD6;" />
        </VBox>

        <VBox spacing="40"
              alignment="TOP_CENTER"
              AnchorPane.topAnchor="266"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              style="-fx-padding: 0 0 70 0;">



            <!-- MAIN DESCRIPTION -->
            <VBox spacing="12" alignment="CENTER" style="-fx-padding: 40 80 0 80;">
                <Label text="Track your packages with ease"
                       styleClass="main-SubTitle" />

                <Label wrapText="true"
                       maxWidth="780"
                       text="Track-IT brings all your shipments into one organized dashboardâ€”so you always stay informed.
We support all major carriers such as USPS, UPS, FedEx, and DHL. Simply paste your tracking number, save it,
and instantly follow real-time delivery updates from dispatch to doorstep."
                       style="-fx-font-size: 20px; -fx-alignment: center;" />
            </VBox>


            <!-- MISSION SECTION -->
            <VBox spacing="14" alignment="CENTER"
                  styleClass="about-section-card">
                <Label text="Our Mission" styleClass="about-section-title"/>

                <Label wrapText="true" maxWidth="780"
                       text="Our goal is to simplify package tracking for everyone. No more searching different websites
for updates. No more lost packages. Track-IT gives you clarity, speed, and a single place to manage all your deliveries."
                       styleClass="about-section-text"/>
            </VBox>


            <!-- HOW IT WORKS -->
            <VBox spacing="20" alignment="CENTER"
                  style="-fx-padding: 10 40 0 40;">
                <Label text="How Track-IT Works" styleClass="main-SubTitle"/>

                <HBox spacing="40" alignment="CENTER">

                    <VBox spacing="12" alignment="CENTER" styleClass="tracking-info-card">
                        <Label text="1. Add a Tracking Number" styleClass="how-title"/>
                        <Label text="Paste your tracking number into Track-IT from any major carrier."
                               wrapText="true" maxWidth="220" styleClass="how-desc"/>
                    </VBox>

                    <VBox spacing="12" alignment="CENTER" styleClass="tracking-info-card">
                        <Label text="2. We Fetch Real-Time Updates" styleClass="how-title"/>
                        <Label text="Track-IT continuously checks carrier APIs for the latest shipment status."
                               wrapText="true" maxWidth="220" styleClass="how-desc"/>
                    </VBox>

                    <VBox spacing="12" alignment="CENTER" styleClass="tracking-info-card">
                        <Label text="3. You Stay Notified" styleClass="how-title"/>
                        <Label text="Receive status updates, delivery estimates, and arrival alerts."
                               wrapText="true" maxWidth="220" styleClass="how-desc"/>
                    </VBox>
                    <VBox spacing="12" alignment="CENTER" styleClass="tracking-info-card">
                        <Label text="4. Want To Ship?" styleClass="how-title"/>
                        <Label text="Simply sign up and ship packages directly from Track-It!."
                               wrapText="true" maxWidth="220" styleClass="how-desc"/>
                    </VBox>
                </HBox>
            </VBox>



        </VBox>
    </AnchorPane>
</ScrollPane>

