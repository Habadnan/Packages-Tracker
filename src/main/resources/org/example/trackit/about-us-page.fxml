<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<HBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: white; -fx-padding: 50 80 50 50; /*top right bottom left*/"
      spacing="60">

    <!-- Left side: About section -->
    <VBox alignment="TOP_LEFT" spacing="32" minWidth="480">
        <Label text="About Track-IT!"
               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #493CD6;" />

        <VBox alignment="TOP_LEFT" spacing="12" style="-fx-padding: 10 0 0 200;">
            <Label text="We are a package tracking company,"
                   style="-fx-font-size: 20px; -fx-text-fill: #333;"/>
            <Label text="and we made this site to give you a better experience for tracking packages."
                   style="-fx-font-size: 20px; -fx-text-fill: #333;"/>
        </VBox>
    </VBox>

    <!-- Right side: Random text area -->
    <StackPane style="-fx-alignment: center;">
        <Label text="Random text area"
               style="-fx-font-size: 18px; -fx-text-fill: #FF6A00; -fx-font-style: italic;"/>
    </StackPane>
</HBox>
