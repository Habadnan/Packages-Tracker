<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.trackit.StartingPageController">
    <!-- HEADER -->
    <top>
        <HBox style="-fx-background-color: #493CD6;" alignment="CENTER_LEFT" spacing="30">
            <Label text="Track-It"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 10 30 10 40;"/>

            <Pane HBox.hgrow="ALWAYS" />
            <!-- Empty pane for spacing -->

            <Button text="Tracking"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;"/>
            <Button text="Support"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;"/>
            <Button text="Login / Signup"
                    onAction="#handleLoginSignup"
                    style="-fx-background-color: #ffffff33; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 5 20; -fx-border-radius: 20;"/>
            <Region minWidth="30"/>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <HBox alignment="CENTER" spacing="0">
            <TextField fx:id="trackingIdField"
                       promptText="TRACKING ID"
                       style="-fx-font-size: 18px; -fx-font-style: italic; -fx-pref-height: 50px; -fx-pref-width: 400px;"/>
            <Button text="TRACK"
                    style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #E84E31; -fx-text-fill: white; -fx-pref-height: 50px; -fx-padding: 0 30 0 30;"/>
        </HBox>
    </center>

    <!-- FOOTER -->
    <bottom>
        <VBox style="-fx-background-color: #493CD6;" spacing="0" alignment="BOTTOM_LEFT">
            <Separator />
            <HBox alignment="TOP_LEFT" spacing="60" style="-fx-padding: 30 20 13 40;">
                <VBox spacing="10">
                    <Label text="OUR COMPANY" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Hyperlink text="About Track-It" style="-fx-text-fill: white;"/>
                    <Hyperlink text="Our Portfolio" style="-fx-text-fill: white;"/>
                    <Hyperlink text="Contact Us" style="-fx-text-fill: white;"/>
                </VBox>
                <!-- Spacer for potential additional columns in the future -->
            </HBox>
        </VBox>
    </bottom>

    <padding>
        <Insets top="0" right="0" bottom="0" left="0"/>
    </padding>
</BorderPane>
