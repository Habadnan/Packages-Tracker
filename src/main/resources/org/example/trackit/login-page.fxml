<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="18" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.trackit.LoginPageController" style="-fx-background-color: white">
    <Label styleClass="main-SubTitle" text="Enter your user ID and password to log in" />
    <TextField fx:id="loginUserIdField" maxHeight="-Infinity" maxWidth="-Infinity" promptText="User ID" style="-fx-font-size: 15px; -fx-pref-width: 320px;"
               styleClass="track-textfield"
    />
    <PasswordField fx:id="loginPasswordField" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Password" style="-fx-font-size: 15px; -fx-pref-width: 320px;"
                   styleClass="track-textfield"
    />
    <Button fx:id="loginButton" onAction="#handleLogin" style=" -fx-font-size: 15px; -fx-font-weight: bold; -fx-pref-width: 220px;" text="Login"
            styleClass="track-button"
    />
    <Button onAction="#handleCreateUserLogin" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-pref-width: 220px;" text="Create a User ID"
            styleClass="track-button-border"
    />
</VBox>
