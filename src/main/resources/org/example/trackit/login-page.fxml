<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" prefHeight="300" prefWidth="400" spacing="16" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.trackit.LoginPageController">
    <padding>
        <Insets bottom="0" left="48" right="0" top="40" />
    </padding>
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Welcome back" />
    <TextField fx:id="loginUsernameField" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Username or Email" />
    <PasswordField fx:id="loginPasswordField" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Password" />
    <HBox spacing="16">
        <Button onAction="#handleLogin" text="Login" />
    </HBox>
</VBox>
