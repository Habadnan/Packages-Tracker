<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.trackit.MasterPageController">
    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="30" style="-fx-background-color: #493CD6;">
            <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 10 30 10 40;" text="Track-It" />
            <Pane HBox.hgrow="ALWAYS" />
            <MenuButton fx:id="trackingMenuButton" style="-fx-background-color: transparent; -fx-font-size: 15px; -fx-font-weight: bold; " text="Tracking" textFill="WHITE">
                <items>
                    <MenuItem fx:id="ongoingTrackingMenuItem" onAction="#handleOngoingTracking" text="Ongoing" />
                    <MenuItem fx:id="pastTrackingMenuItem" onAction="#handlePastTracking" text="Past" />
                </items>
            </MenuButton>

            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;" text="Support" />
            <Button fx:id="loginSignupButton" onAction="#handleLoginSignup" style="-fx-background-color: #ffffff33; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 5 20; -fx-border-radius: 20;" text="Login / Signup" />
            <Region minWidth="30" />
        </HBox>
    </top>
    <center>
        <StackPane fx:id="contentPane" />
    </center>
    <bottom>
        <VBox alignment="BOTTOM_LEFT" spacing="0" style="-fx-background-color: #493CD6;">
            <Separator />
            <HBox alignment="TOP_LEFT" spacing="60" style="-fx-padding: 30 20 13 40;">
                <VBox spacing="10">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: white;" text="OUR COMPANY" />
                    <Hyperlink style="-fx-text-fill: white;" text="About Track-It" />
                    <Hyperlink style="-fx-text-fill: white;" text="Our Portfolio" />
                    <Hyperlink style="-fx-text-fill: white;" text="Contact Us" />
                </VBox>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
